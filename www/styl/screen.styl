@import colors
@import prefixes
@import 'components/triangle'
infobarHeight = 150px
.ig
  @import basics
  @import InfoBar
  @import GraphTip
.ig
  overflow hidden
  .map
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    transform translate(0, 0px)
    transition transform 0.2s
    .leaflet-div-icon
      border 0px none
      border-radius 50%
      div
        border-radius 50%
        width 100%
        height 100%
        text-align center
        color white
        font-size 16px
        opacity 0.7
      &:hover
        border-color rgba(#fd8d3c, 0.8)
        div
          opacity 1
  &.info-bar-active
    .map
      transform translate(0, infobarHeight * -1)
    .info-bar
      transform translate(0, 0)
  .graph-tip
    width auto
    white-space nowrap
