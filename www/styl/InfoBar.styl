.info-bar
  position absolute
  left 0px
  width 100%
  height 200px
  bottom 0px
  background lighten(ColorGrey, 80%)
  padding 10px 20px
  border-top 1px solid darken(ColorGrey, 30%)
  transform translate(0, @height)
  transition transform 0.2s
  h3
    margin 0px
    color ColorRed
  .close-button
    position absolute
    top 10px
    right 20px
    font-size 23px
    text-decoration none
    color ColorBlue
    transform rotate(0deg)
    transition transform 0.3s, color 0.3s
    &:hover
      color ColorRed
      transform rotate(90deg)
